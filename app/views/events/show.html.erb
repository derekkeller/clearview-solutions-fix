<div class='headers'>
	<h1><%= @event.name %></h1>
</div>

	<table>
		<tr>
			<th class='left'>Date</th>
			<td class='left'><%= @event.date %></td>
		</tr>
		<tr>
			<th class='left'>Type</th>
			<td class='left'><%= @event.event_type %></td>
		</tr>
		<tr>
			<th class='left'>Notes</th>
			<td class='left'><%= @event.notes %></td>
		</tr>
		<tr>
			<th class='left'>Investors Present</th>
			<td class='left'>
				<ul>
					<% @event.attendees.investors.each do |attendee| %>
						<li><%= attendee.first_name %></li>
					<% end %>
				</ul>
			</td>
		</tr>
		<tr>
			<th class='left'>H12 Team Present</th>
			<td class='left'>
				<ul>
					<% @event.attendees.employees.each do |attendee| %>
						<li><%= attendee.first_name %></li>
					<% end %>
				</ul>
			</td>
		</tr>
		<tr>
			<th class='left'>User ID</th>
			<td class='left'><%= @event.user %></td>
		</tr>
	</table>

		
<br />
<%= link_to 'Edit', edit_investor_event_path(@investor) %> |
<%= link_to 'Destroy', @event, :confirm => 'Are you sure?', :method => :delete %>

<div class='back_footer'>
	<%= link_to "Back to #{@investor.name}", @investor %>
</div>
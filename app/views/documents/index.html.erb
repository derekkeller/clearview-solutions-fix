<div class='headers'>
	<h1>Documents Index</h1>
</div>

<table>
	<tr>
		<th class='left'>Name</th>
		<th class='left'>File</th>
		<th class='left'>User ID</th>
		<th class='left'>Private</th>
		<th class='left'>Stage</th>
		<th class='left'></th>
		<th class='left'></th>
		<th class='left'></th>
	</tr>
	<% @documents.each do |document| %>
	<tr class='<%= cycle('odd','even') %>'>
		<td class='left'><%= link_to document.name, folder_document_path(@folder, document) %></td>
		<td class='left'><%= document.attachment %></td>
		<td class='left'><%= document.user_id %></td>
		<td class='left'><%= document.private? ? "Yes" : "No" %></td>
		<td class='left'><%= document.stage %></td>
		<td class='left'><%= link_to 'Edit', edit_document_path(document) %></td>
		<td class='left'><%= link_to 'Destroy', document, :confirm => "Are you sure?", :method => :delete %></td>
		<td class='left'><%= link_to 'Download', "/uploads/document/file/2/super.rtf" %></td>
	</tr>
	<% end %>
</table>

<br />
<%= link_to 'Add Document', new_document_path %>
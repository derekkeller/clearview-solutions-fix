<div class='headers'>
	<h1><%= @task.name %></h2>
</div>

	<table>
		<tr class='left'>
			<th>Due Date</th>
			<td><%= @task.due_date %></td>
		</tr>
		<tr class='left'>
			<th>Description</th>
			<td><%= @task.description %></td>
		</tr>
		<tr class='left'>
			<th>Completed</th>
			<td><%= @task.completed? ? 'Yes' : 'No' %></td>
		</tr>
		<tr class='left'>
			<th>Completed Date</th>
			<td><%= @task.completed_date %></td>
		</tr>
		<tr class='left'>
			<th>Event ID</th>
			<td><%= @task.event_id %></td>
		</tr>
		<tr class='left'>
			<th>Investor</th>
			<td><%= @task.investor.name %></td>
		</tr>
		<tr class='left'>
			<th>Assigned By</th>
			<td><%= @task.user.first_name %></td>
		</tr>
		<tr class='left'>
			<th>Assigned To</th>
			<td><%=  %></td>
		</tr>
	</table>
	

		
